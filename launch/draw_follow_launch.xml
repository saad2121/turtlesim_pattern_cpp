<?xml version="1.0"?>
<launch>
  <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim1" output="screen" />
  <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim2" output="screen" />

  <node pkg="turtlesim_pattern_cpp" exec="square_drawer" output="screen">
     <remap from="/turtle1/cmd_vel" to="/turtlesim1/turtle1/cmd_vel"/>
     
    </node>

    <node pkg="turtlesim_pattern_cpp" exec="follower" output="screen">
    <remap from="/turtle1/pose" to="/turtlesim1/turtle1/pose"/>
    <remap from="/turtle2/pose" to="/turtlesim2/turtle1/pose"/>
    <remap from="/turtle2/cmd_vel" to="/turtlesim2/turtle1/cmd_vel"/>

    </node>
</launch>


   
